<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña - Salga Adelante Sumercé</title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="shortcut icon" href="/images/logo_login.png" type="image/x-icon">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Logo -->
            <div class="logo-container">
                <img src="/images/logo_login.png" alt="Logo Salga Adelante Sumercé" class="logo">
            </div>

            <!-- Título -->
            <h1 class="login-title">¿Olvidaste tu contraseña?</h1>
            <p class="login-subtitle">Ingresa tu correo electrónico y te enviaremos instrucciones para recuperarla</p>

            <!-- Mensaje de éxito (si existe) -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <!-- Mensaje de error (si existe) -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <!-- Formulario de recuperación -->
            <form class="login-form" action="/forgot-password" method="POST">
                <div class="form-group">
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input" 
                        placeholder="Correo electrónico"
                        required
                        autocomplete="email"
                    >
                </div>

                <button type="submit" class="btn-login">
                    Enviar Instrucciones
                </button>

                <!-- Link de regreso al login -->
                <div class="forgot-password-container">
                    <a href="/login" class="forgot-password-link">
                        Volver al inicio de sesión
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Mostrar mensajes con SweetAlert2
        <% if (typeof success !== 'undefined' && success) { %>
            Swal.fire({
                icon: 'success',
                title: '¡Correo enviado!',
                text: '<%= success %>',
                confirmButtonColor: '#667eea',
                confirmButtonText: 'Entendido'
            });
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '<%= error %>',
                confirmButtonColor: '#667eea',
                confirmButtonText: 'Entendido'
            });
        <% } %>

        // Validación de correo electrónico
        document.getElementById('email').addEventListener('blur', function(e) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (this.value && !emailRegex.test(this.value)) {
                this.setCustomValidity('Por favor ingresa un correo electrónico válido');
                this.reportValidity();
            } else {
                this.setCustomValidity('');
            }
        });

        // Validación al enviar el formulario
        document.querySelector('.login-form').addEventListener('submit', function(e) {
            const email = document.getElementById('email').value;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (!emailRegex.test(email)) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Correo inválido',
                    text: 'Por favor ingresa un correo electrónico válido.',
                    confirmButtonColor: '#667eea',
                    confirmButtonText: 'Entendido'
                });
                return false;
            }
        });
    </script></body>
</html>
