<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="shortcut icon" href="/images/logo_login.png" type="image/x-icon">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Logo -->
            <div class="logo-container">
                <img src="/images/logo_login.png" alt="Adelante Sumercé Logo" class="logo">
            </div>

            <!-- Título -->
            <h1 class="login-title">Iniciar Sesión</h1>
            <p class="login-subtitle">Ingrese sus credenciales para acceder al sistema</p>

            <!-- Mensaje de error si existe -->
            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <!-- Formulario -->
            <form action="/login" method="POST" class="login-form">
                <div class="form-group">
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input" 
                        placeholder="Correo electrónico"
                        required
                        autocomplete="email"
                    >
                </div>

                <div class="form-group">
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-input" 
                        placeholder="Contraseña"
                        required
                        autocomplete="current-password"
                    >
                </div>

                <div class="forgot-password-container">
                    <a href="/forgot-password" class="forgot-password-link">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn-login">Iniciar Sesión</button>
            </form>

            <!-- Enlace de registro -->
            <div class="register-link-container">
                <p class="register-text">
                    ¿No tienes cuenta? <a href="/register" class="register-link">Regístrate</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Mostrar alerta de registro exitoso si viene de registro
        <% if (typeof registered !== 'undefined' && registered) { %>
            Swal.fire({
                icon: 'success',
                title: '¡Registro exitoso!',
                text: 'Tu cuenta ha sido creada exitosamente. Ya puedes iniciar sesión.',
                confirmButtonColor: '#667eea',
                confirmButtonText: 'Entendido'
            });
        <% } %>

        // Mostrar error con SweetAlert2 si existe
        <% if (typeof error !== 'undefined' && error) { %>
            Swal.fire({
                icon: 'error',
                title: 'Error en el inicio de sesión',
                text: '<%= error %>',
                confirmButtonColor: '#667eea',
                confirmButtonText: 'Entendido'
            });
        <% } %>

        // Validación del correo electrónico
        document.getElementById('email').addEventListener('blur', function(e) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (this.value && !emailRegex.test(this.value)) {
                this.setCustomValidity('Por favor ingrese un correo electrónico válido');
                this.reportValidity();
            } else {
                this.setCustomValidity('');
            }
        });

        // Validación del formulario antes de enviar
        document.querySelector('.login-form').addEventListener('submit', function(e) {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!email || !password) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Campos incompletos',
                    text: 'Por favor complete todos los campos',
                    confirmButtonColor: '#667eea',
                    confirmButtonText: 'Entendido'
                });
                return false;
            }

            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Correo inválido',
                    text: 'Por favor ingrese un correo electrónico válido',
                    confirmButtonColor: '#667eea',
                    confirmButtonText: 'Entendido'
                });
                return false;
            }
        });
    </script>
</body>
</html>